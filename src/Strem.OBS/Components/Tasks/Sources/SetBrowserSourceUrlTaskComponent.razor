@using Microsoft.AspNetCore.Components
@using Strem.OBS.Types

@inherits ObsInputComponent<Strem.OBS.Flows.Tasks.SetBrowserSourceUrlTaskData>

<div class="field">
    <label class="label">Browser Source Name</label>
    <div class="control  is-expanded">
        <AutoComplete @bind-Value="@Data.BrowserSourceName" Data="InputNames" />
    </div>
</div>

<div class="field">
    <label class="label">Url</label>
    <div class="control">
        <ProcessedInput @bind-Value="@Data.Url" Placeholder="i.e V(clip-url)" />
    </div>
</div>

@code {
    public override string Title => $"Set Browser Url For {Data.BrowserSourceName}";
    
    protected override async Task OnInitializedAsync()
    {
        AllowedSourceKind = SourceKindType.BrowserSource;
        await base.OnInitializedAsync();
    }
}