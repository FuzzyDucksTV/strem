@using Strem.Core.Services.Registries.Menus
@inject IMenuRegistry MenuRegistry

<div class="tabs is-centered is-boxed">
  <ul class="pt-4">
    
    @foreach (var menuDescriptor in MenuRegistry.GetAll().OrderBy(x => x.Priority))
    {
      <li>
        <NavLink href="@menuDescriptor.PageUrl" ActiveClass="has-background-info-light has-text-black-bis" Match="NavLinkMatch.All">
          <span class="icon is-small"><i class="@menuDescriptor.IconClass" aria-hidden="true"></i></span>
          <span>@menuDescriptor.Title</span>
        </NavLink>
      </li>
    }

    <li>
      <NavLink href="integrations" ActiveClass="has-background-info-light has-text-black-bis" Match="NavLinkMatch.All">
        <span class="icon is-small"><i class="fas fa-cubes" aria-hidden="true"></i></span>
        <span>Integrations</span>
      </NavLink>
    </li>
    <li>
      <NavLink href="settings" ActiveClass="has-background-info-light has-text-black-bis" Match="NavLinkMatch.All">
        <span class="icon is-small"><i class="fas fa-gears" aria-hidden="true"></i></span>
        <span>Settings</span>
      </NavLink>
    </li>
    <li>
      <NavLink href="logs" ActiveClass="has-background-info-light has-text-black-bis" Match="NavLinkMatch.All">
        <span class="icon is-small"><i class="fas fa-file-lines" aria-hidden="true"></i></span>
        <span>Logs</span>
      </NavLink>
    </li>
    @{
      #if DEBUG
    }
    <li>
      <NavLink href="test" ActiveClass="has-background-info-light has-text-black-bis" Match="NavLinkMatch.All">
        <span class="icon is-small"><i class="fas fa-gears" aria-hidden="true"></i></span>
        <span>TEST AREA</span>
      </NavLink>
    </li>
    @{
      #endif
    }

  </ul>
</div>