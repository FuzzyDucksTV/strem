@inherits Strem.Flows.Components.Triggers.CustomTriggerComponent<Strem.Flows.Default.Flows.Triggers.Utility.OnIntervalTriggerData>

<div class="field">
    <label class="label">Interval Type</label>
    <div class="control">
        <EnumWithValueInput @bind-EnumValue="Data.IntervalUnitsType" @bind-Value="Data.IntervalValue" Placeholder="i.e 5 or dynamic vars" />
    </div>
</div>
<div class="field">
    <div class="control">
        <CheckBox @bind-Value="Data.StartImmediately" Label="Should It Trigger On Start Too?"></CheckBox>
    </div>
</div>

@code {
    public override string Title => $"Trigger Every <strong>{Data.IntervalValue} {Data.IntervalUnitsType}</strong>";
}