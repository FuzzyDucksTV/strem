@using Strem.Core.Flows.Registries.Integrations
<Accordion Title="@Descriptor.Title" HeaderClasses="@Descriptor.Code" IsExpanded="true">
    <DynamicComponent Type="Descriptor.ComponentType" />
    @if (Descriptor.VariableOutputs.Length > 0)
    {
        <Accordion Title="Output Variables" HeaderClasses="is-info">
            <VariableDescriptorList VariableDescriptors="Descriptor.VariableOutputs" />
        </Accordion>
    }
</Accordion>

@code {

    [Parameter]
    public IIntegrationDescriptor Descriptor { get; set; }
}