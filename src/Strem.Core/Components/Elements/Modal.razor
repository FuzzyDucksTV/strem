
<div class="modal box @(IsVisible ? "is-active":"")">
  <div class="modal-background"></div>
  <div class="modal-content box">
    @ChildContent
  </div>
  @if (ShowCloseButton)
  {
    <button class="modal-close is-large" aria-label="close" @onclick="() => IsVisible = false"></button>
  }
</div>

@code {
  [Parameter]
  public bool IsVisible { get; set; }

  [Parameter]
  public bool ShowCloseButton { get; set; } = true;
    
  [Parameter] 
  public RenderFragment ChildContent  { get; set; }
}