@inherits ValidatedInputBase<string>

<input class="input @(IsValid != null ? IsValid.Value ? "valid" : "invalid" : "")" type="@Type" 
       placeholder="@Placeholder" value="@Value" @onchange="e => OnValueChanged(e.Value.ToString())"/>

@code {
    [Parameter]
    public string Type { get; set; } = "text";
    
    [Parameter]
    public string Placeholder { get; set; }
}