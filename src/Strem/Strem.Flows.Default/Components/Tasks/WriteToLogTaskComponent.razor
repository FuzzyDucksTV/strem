@using Strem.Flows.Default.Flows.Tasks.Data

<TaskComponent Title="Write Text To File" OnRequestedDeletion="OnRequestedDeletion">
    <div class="field">
      <label class="label">Text To Log</label>
      <div class="control">
        <input class="input" type="text" placeholder="i.e Something Happened With Value V(something)" @bind="Data.Text">
      </div>
    </div>
</TaskComponent>

@code {
    [Parameter]
    public WriteToLogTaskData Data { get; set; }
    
    [Parameter] 
    public EventCallback OnRequestedDeletion { get; set; }
}