@using Strem.Flows.Default.Flows.Triggers.Data
@using Strem.Core.Utils
@using Strem.Core.Flows.Triggers

@inherits CustomTriggerComponent<OnIntervalTriggerData>

<div class="field">
    <label class="label">Interval Type</label>
    <div class="control">
        <div class="select">
            <select @bind="Data.IntervalUnits">
                @foreach (var timeUnit in Enum.GetValues(typeof(TimeUnit)))
                {
                    <option value="@timeUnit">@((TimeUnit)timeUnit)</option>
                }
            </select>
        </div>
    </div>
</div>
<div class="field">
    <label class="label">Interval Value</label>
    <div class="control">
        <input class="input" type="text" placeholder="i.e 5" @bind="Data.IntervalValue">
    </div>
</div>
<div class="field">
  <div class="control">
    <label class="checkbox">
      <input type="checkbox" @bind="Data.StartImmediately">
      Should It Trigger On Start Too?
    </label>
  </div>
</div>

@code {
    public override string Title => $"Trigger Every {Data.IntervalValue} {Data.IntervalUnits}";
}